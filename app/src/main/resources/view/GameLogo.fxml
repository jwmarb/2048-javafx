<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import org.csc335.controllers.GameLogo?>
<?import org.csc335.controllers.FAIcon?>

<fx:root type="javafx.scene.layout.VBox" styleClass="top-left-wrapper"
  xmlns:fx="http://javafx.com/fxml/1">
  <HBox styleClass="top-left-container" onMouseClicked="#openMenu">
    <FAIcon icon="bars" styleClass="top-left-container-menu-icon" />
    <VBox styleClass="game-label-container">
      <Label text="2048" styleClass="game-label" />
      <HBox styleClass="game-mode-container" fx:id="gameModeContainer">
        <FAIcon styleClass="game-mode-label" fx:id="icon" />
        <Label styleClass="game-mode-label" fx:id="modeLabel" />
      </HBox>
    </VBox>
  </HBox>
</fx:root>